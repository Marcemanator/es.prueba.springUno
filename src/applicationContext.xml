<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
<context:property-placeholder location="classpath:datosEmpresa.propiedades"/>
<bean id="miInforme" class="springUno.Informe" ></bean>
<bean id="miEmpleado" class="springUno.directorEmpleado">
    <constructor-arg ref="miInforme"></constructor-arg>

</bean>
<bean id="empleadoJefe" class="springUno.jefeEmpleado" >
    <constructor-arg ref="miInforme"></constructor-arg>
    <property name="corporateName"  value="${nombreEmpresa}"></property>
    <property name="email" value="${email}"></property>




</bean>
<bean id="miSecretario" class="springUno.secretarioEmpleado">
    <property name="informeNuevo" ref="miInforme"></property>
    <property name="corporateName"  value="Empresón Molón"></property>
    <property name="email" value="elsecretario@elsecretario.com"></property>





</bean>






</beans>
